# Package Manager
engine-strict=true
save-exact=true

# pnpm specific settings
shamefully-hoist=false
strict-peer-dependencies=true

# Security
audit-level=moderate

# Performance
prefer-offline=true
progress=true

# Logging
loglevel=warn

# Registry (optional)
# registry=https://registry.npmjs.org/

# Cache settings
# cache=~/.npm
